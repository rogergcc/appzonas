<resources>

    <!-- Base application theme. -->

    <style name="AppTheme" parent="Base.AppTheme" />

    <style name="Base.AppTheme" parent="Theme.AppCompat.Light.NoActionBar">

        <item name="colorPrimary">#9F8F82</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorAccent">@color/accentColor</item>

    </style>

    <style name="Theme.ConNavigationDrawer" parent="Base.AppTheme" />

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="MyButton" parent="Base.AppTheme">
        <item name="colorControlHighlight">@color/primaryDarkColor</item>
        <item name="colorButtonNormal">@color/accentColor</item>
    </style>
</resources>
