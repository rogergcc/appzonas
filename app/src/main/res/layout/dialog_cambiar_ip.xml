<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    android:layout_gravity="center"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/backgroundactivity"
        android:orientation="vertical"
        android:gravity="center_horizontal">
        <TextView
            android:id="@+id/dialog_txt_ip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="IP SERVICIO"
            android:textColor="#121212"
            android:textStyle="bold"
            android:textSize="22sp"
            android:layout_marginTop="20dp"
            />

        <EditText
            android:id="@+id/dialog_edt_ip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="192.168.1.36"
            android:background="@color/color_light"
            android:textColor="#111"
            android:inputType="text"

            android:digits="http://0123456789."
            android:textStyle="bold"
            android:textSize="18sp"
            android:paddingVertical="5dp"
            android:paddingHorizontal="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginHorizontal="5dp"
            android:gravity="center_horizontal"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:layout_height="match_parent">
            <Button
                android:id="@+id/btnAprobarIP"

                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@color/color_light"
                android:text="GUARDAR IP"
                android:layout_margin="2dp"
                android:paddingHorizontal="10dp"


                android:drawableStart="@drawable/adt_ic_success"
                />

        </LinearLayout>

    </LinearLayout>
</RelativeLayout>