<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    android:layout_gravity="center"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorAppLegal"
        android:orientation="vertical"
        android:gravity="center_horizontal">
        <TextView
            android:id="@+id/det_doc_tit_doc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Documento:"
            android:textColor="#fff"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginTop="30dp"
            />
        <TextView
            android:id="@+id/det_doc_tit_subt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nemonico:"
            android:textColor="#fff"
            android:textStyle="bold"
            android:textSize="15sp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            />

        <TextView
            android:id="@+id/det_doc_tipo_contrato"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="tipo contrato:"
            android:textColor="#f1f1f1"

            android:gravity="center_horizontal"

            android:textStyle=""
            android:textSize="12sp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            />
        <TextView
            android:id="@+id/det_doc_fecha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="fecha"
            android:textColor="#f1f1f1"

            android:textStyle="italic"
            android:textSize="15sp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginHorizontal="5dp"
            android:gravity="center_horizontal"
            android:layout_height="match_parent">
            <Button
                android:id="@+id/btnAprobar"
                android:layout_weight="0.5"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="#fff"
                android:text="Aprobar"
                android:layout_margin="2dp"
                android:paddingHorizontal="10dp"

                android:drawablePadding="20dp"
                android:drawableLeft="@drawable/adt_ic_success"
                />
            <Button
                android:focusable="true"
                android:clickable="true"
                android:layout_margin="2dp"
                android:id="@+id/btnCancelar"
                android:layout_weight="0.5"
                android:layout_width="0dp"
                android:layout_height="match_parent"

                android:background="#fff"
                android:text="Rechazar"
                android:paddingHorizontal="10dp"

                android:drawableLeft="@mipmap/ic_clear_black"
                android:drawablePadding="20dp"

                />
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>