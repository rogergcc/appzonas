<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"

    android:orientation="vertical"

    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:layout_margin="@dimen/activity_vertical_margin"
    >

    <TextView
        android:id="@+id/rechazo_doc_texto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:paddingLeft="@dimen/card_title_padding"
        android:paddingRight="@dimen/card_title_padding"
        android:paddingTop="@dimen/card_title_padding"
        android:textColor="#111"
        android:layout_margin="5dp"

        android:text="Documento"
        android:textSize="21sp" />
    <TextView
        android:layout_margin="5dp"
        android:id="@+id/rechazo_doc_contenido"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:paddingLeft="@dimen/card_title_padding"
        android:paddingRight="@dimen/card_title_padding"

        android:layout_marginRight="14sp"

        android:text="Ingrese  una Observacion para  Rechazar este Documento"
        android:paddingBottom="@dimen/card_price_padding_bottom"

        android:textSize="15dp" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:ems="20"
        android:inputType="textMultiLine" />

    <Button
        android:id="@+id/btnRechazar"
        android:layout_width="match_parent"
        android:text="Rechazar"
        android:layout_height="wrap_content" />

</LinearLayout>