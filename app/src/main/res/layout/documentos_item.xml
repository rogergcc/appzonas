<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"

    android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/documento_card_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"

        android:layout_margin="1dp"
        android:clickable="true"
        android:elevation="3dp"
        android:foreground="?attr/selectableItemBackground"

        card_view:cardCornerRadius="@dimen/card_album_radius"
        android:focusable="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:padding="@dimen/espacio_norma_1"
            android:layout_height="match_parent">


            <TextView
                android:drawableStart="@mipmap/check_file"
                android:id="@+id/titleDocItem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"

                android:text="@string/title_gifts"
                android:paddingLeft="@dimen/card_title_padding"

                android:paddingRight="@dimen/card_title_padding"
                android:lines="2"
                android:textColor="#111"
                android:textSize="21sp" />

            <TextView
                android:id="@+id/subtitleDocItem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/titleDocItem"
                android:layout_marginRight="10dp"
                android:gravity="right"
                android:text="Tipo"
                android:paddingBottom="@dimen/card_price_padding_bottom"
                android:textColor="@color/accentColor"
                android:textSize="11dp" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>